<?xml version="1.0"?>
<configuration>
  <configSections>
      <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net, Version=1.2.11.0, Culture=neutral, PublicKeyToken=null"/>
  </configSections>
  
  <!-- Log4Net -->

  <log4net>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="LogFileAppender"/>
      <appender-ref ref="ConsoleAppender"/>
      <appender-ref ref="TraceAppender"/>
    </root>
    
    <appender name="LogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="..\..\..\Log\"/>
      <datePattern value="dd.MM.yyyy'_HSA.InfoSys.WebCrawler.log'"/>
      <param name="AppendToFile" value="true"/>
      <rollingStyle value="Date"/>
      <staticLogFileName value="false"/>
      <maxSizeRollBackups value="10"/>
      <maximumFileSize value="10MB"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%-5p%d{dd-MM-yyyy hh:mm:ss} â€“ %m%n"/>
      </layout>
    </appender>

    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline"/>
      </layout>
    </appender>

    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline"/>
      </layout>
    </appender>
    
  </log4net>
  
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="NHibernate" publicKeyToken="AA95F207798DFDB4" culture="neutral"/>
        <bindingRedirect oldVersion="0.0.0.0-3.3.1.4000" newVersion="3.3.1.4000"/>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  
  <!-- WCF Service -->
  
 <system.serviceModel>
  <behaviors>
   <serviceBehaviors>
    <behavior name="MetaInformation">
     <serviceMetadata httpGetEnabled="true" httpGetUrl="http://localhost:8085/GetMetaInformation"/>
    </behavior>
   </serviceBehaviors>
  </behaviors>
  <services>
   <service behaviorConfiguration="MetaInformation" name="HSA.InfoSys.WebCrawler.CrawlController">
    <endpoint address="http://localhost:8085" binding="basicHttpBinding" bindingConfiguration="" contract="HSA.InfoSys.WebCrawler.ICrawlController"/>
   </service>
  </services>
 </system.serviceModel>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/></startup></configuration>
